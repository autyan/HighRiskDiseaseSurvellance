@{
    Layout = "_Layout";
    ViewBag.Title = "健康监测历史管理";
}

@section style{
    <link rel="stylesheet" href="~/lib/DataTables/datatables.min.css"/>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">健康监测报告管理</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">健康监测报告</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">搜索条件</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="userid">用户ID</label><input class="form-control" id="userid" placeholder="用户ID" value="@ViewBag.UserId"/>
                                </div>
                                <div class="col-md-3">
                                    <label for="status">监测报告状态</label>
                                    <select class="form-control" id="status">
                                        <option></option>
                                        <option value="0">未支付</option>
                                        <option value="1">已完成</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label for="surveillanceTypeName">监测类型</label>
                                    <select class="form-control" id="surveillanceTypeName">
                                        <option></option>
                                        <option value="Hyperlipidemia">高血脂风险评估</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-11"></div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-primary" id="startSearch">查询</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">用户监测历史记录</h3>
                        </div>

                        <div class="card-body">
                            <table id="records" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>用户昵称</th>
                                    <th>监测类型</th>
                                    <th>提交时间</th>
                                    <th>记录状态</th>
                                    <th>支付订单号</th>
                                    <th>操作</th>
                                </tr>
                                </thead>
                            </table>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
    <!-- /.content -->
</div>
@section script
{
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script>
        $('#startSearch').click(function() {
            $('#records').DataTable().ajax.reload();
        });
        $('#records').DataTable({
            "serverSide":true,
            "searching":false,
            ajax: {'url':'/api/Record/Query',
                "data":function(d) {
                    d.userid = $('#userid').val();
                    d.status = $('#status').val();
                    d.surveillanceTypeName = $('#surveillanceTypeName').val();
                }},
            "columns": [{ "data": "id" }, { "data": "userNickName" }, {"data":"surveillanceTypeDisplayName"},
                {"data":"createTime"},
                {"data":"status","render":function(data, type, row, meta) {
                    if (data === 0) return '未支付';
                    if (data === 1) return '已完成';
                    return '未知状态';
                }},{"data":"orderId"},
                {"data":null,"render":function(data, type, row, meta) {
                    var html = '<a class="btn btn-primary" href="User/RecordDetail"' + row.id + ' >查看详情</a>';
                    return html;
                }}],
            language: {
                "sProcessing": "处理中...",
                "sLengthMenu": "显示 _MENU_ 项结果",
                "sZeroRecords": "没有匹配结果",
                "sInfo": "显示第 _START_ 至 _END_ 项结果，共 _TOTAL_ 项",
                "sInfoEmpty": "显示第 0 至 0 项结果，共 0 项",
                "sInfoFiltered": "(由 _MAX_ 项结果过滤)",
                "sInfoPostFix": "",
                "sSearch": "搜索:",
                "sUrl": "",
                "sEmptyTable": "表中数据为空",
                "sLoadingRecords": "载入中...",
                "sInfoThousands": ",",
                "oPaginate": {
                    "sFirst": "首页",
                    "sPrevious": "上页",
                    "sNext": "下页",
                    "sLast": "末页"
                },
                "oAria": {
                    "sSortAscending": ": 以升序排列此列",
                    "sSortDescending": ": 以降序排列此列"
                }
            }
        });
    </script>
}
